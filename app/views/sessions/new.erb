<!-- view for login page -->
<div id="homepage">

<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card lgpad" id="signin">
			<div class="d-inline-flex card-header justify-content-center">
				<h3>Sign In</h3>
			</div>
			<div class="d-inline-flex card-body justify-content-center smpad">
				<%= form_tag(login_path) do %>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
            <%= text_field_tag :username, nil, placeholder: '  username' %>
					</div>

					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
            <%= password_field_tag :password, nil, placeholder: '  password' %>
					</div>

					<div class="input-group form-group">
            <%= submit_tag 'Login', class: "btn btn-custom btn-sm", id: "btnpad" %>
					</div>
					<div class="d-inline-flex justify-content-center">
							<%= flash[:notice]%>
					</div>
				<% end %>

			</div>

			<div class="card-footer">
        <div class="d-flex justify-content-center links">
					Don't have an account?
				</div>
				<div class="d-flex justify-content-center">
					<%= link_to "Create Account", new_user_path, method: "get"%>
				</div>
			</div>
		</div>
	</div>
</div>

</div>
